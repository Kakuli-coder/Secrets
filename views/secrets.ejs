<%- include('partials/header') %>

  <div class="jumbotron centered vh-100 d-flex justify-content-center align-items-center">
    <div class="container">
      <i class="fas fa-key fa-6x"></i>
      <h1 class="display-4">You've Discovered Secrets!</h1>
          <% for (const user of usersWithSecret) { %>
            <p class="secret-text">
              <%= user.secret %>
            </p>
          <% }; %>
      <hr>
                <form action="/logout" method="post">
                  <button type="submit" class="btn btn-light btn-lg">Log Out</button>
                  <a class="btn btn-dark btn-lg" href="/submit" role="button">Submit a Secret</a>
                </form>
    </div>
  </div>

  <%- include('partials/footer') %>